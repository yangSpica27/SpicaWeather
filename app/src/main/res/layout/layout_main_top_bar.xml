<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="@id/ts_location"
        app:layout_constraintBottom_toBottomOf="@id/ts_location"
        app:layout_constraintStart_toStartOf="parent" />

    <TextSwitcher
        android:id="@+id/ts_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="30dp"
        android:inAnimation="@anim/message_in_anim"
        android:outAnimation="@anim/message_out_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:gravity="center" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ts_location"
        android:layout_marginTop="24dp"
        android:background="@color/line_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>