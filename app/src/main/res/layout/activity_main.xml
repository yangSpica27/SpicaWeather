<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context=".ui.main.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_main_top_bar" />

    <FrameLayout
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/rg_bottom"
        android:layout_weight="1"
        android:animateLayoutChanges="true">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        android:checkedButton="@id/btn_home"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonTint="@color/nav_select_color"
            android:button="@drawable/selector_home"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonTint="@color/nav_select_color"
            android:button="@drawable/selector_location"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/btn_md"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonTint="@color/nav_select_color"
            android:button="@drawable/selector_material"
            android:layout_weight="1" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/view_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:paddingTop="12dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="12dp"
        android:scaleX="0"
        android:scaleY="0"
        android:orientation="vertical"
        android:background="@drawable/bg_round"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_plus">

        <include layout="@layout/item_weather_location" />

        <include layout="@layout/item_weather_location" />

        <include layout="@layout/item_weather_location" />

        <include layout="@layout/item_weather_location" />

        <include layout="@layout/item_weather_location" />

        <include layout="@layout/item_weather_location" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tintMode="add"
        app:backgroundTint="@color/black"
        android:layout_margin="20dp"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>