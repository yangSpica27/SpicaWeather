<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpicaWeather" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/textColorPrimaryHint</item>
        <item name="colorPrimaryVariant">@color/textColorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/window_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
</resources>